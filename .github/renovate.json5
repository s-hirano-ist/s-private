{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  timezone: "Asia/Tokyo",
  baseBranches: ["main"],
  extends: ["config:base", ":semanticCommitTypeAll(chore)", "customManagers:biomeVersions"],
  reviewers: ["s-hirano-ist"],
  enabledManagers: ["npm", "github-actions", "docker-compose", "dockerfile"],
  dependencyDashboard: true,
  schedule: ["before 11am on monday"],
  labels: ["dependencies"],
  rangeStrategy: "bump",
  lockFileMaintenance: {
    enabled: true,
  },
  vulnerabilityAlerts: {
    labels: ["security"],
  },
  packageRules: [
    {
      matchManagers: ["npm"],
      matchUpdateTypes: ["patch"],
      matchPackagePatterns: ["*"],
      matchDepTypes: ["dependencies", "devDependencies", "peerDependencies"],
      groupName: "patch",
    },
    {
      matchManagers: ["npm"],
      matchUpdateTypes: ["minor"],
      matchPackagePatterns: ["*"],
      matchDepTypes: ["dependencies", "devDependencies", "peerDependencies"],
      groupName: "minor",
    },
  ],
}
