{
	"name": "@s-hirano-ist/s-database",
	"version": "1.0.0",
	"description": "Prisma database schema and client for s-private project",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./generated": "./src/generated/prisma/client.ts",
		"./generated/*": "./src/generated/prisma/*"
	},
	"publishConfig": {
		"access": "public",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"./generated": "./src/generated/prisma/client.ts",
			"./generated/*": "./src/generated/prisma/*"
		},
		"main": "./dist/index.js",
		"types": "./dist/index.d.ts"
	},
	"files": [
		"dist",
		"src/generated",
		"prisma",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy",
		"prisma:studio": "prisma studio",
		"build": "tsc --noEmit",
		"postinstall": "pnpm prisma:generate",
		"prepublishOnly": "pnpm prisma:generate",
		"clean": "rm -rf dist"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/s-hirano-ist/s-private.git",
		"directory": "packages/database"
	},
	"license": "AGPL-3.0",
	"dependencies": {
		"@prisma/client": "7.0.1",
		"@prisma/client-runtime-utils": "7.0.1",
		"@prisma/extension-accelerate": "3.0.0"
	},
	"devDependencies": {
		"prisma": "7.0.1",
		"typescript": "5.9.3"
	}
}
