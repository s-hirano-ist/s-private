{
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "ES2022",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/index.ts"],
	"exclude": ["node_modules", "dist", "src/generated"]
}
