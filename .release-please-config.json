{
	"packages": {
		".": {
			"release-type": "node",
			"component": "s-private"
		},
		"packages/core": {
			"release-type": "node",
			"component": "@s-hirano-ist/s-core"
		},
		"packages/ui": {
			"release-type": "node",
			"component": "@s-hirano-ist/s-ui"
		},
		"packages/database": {
			"release-type": "node",
			"component": "@s-hirano-ist/s-database"
		},
		"packages/notification": {
			"release-type": "node",
			"component": "@s-hirano-ist/s-notification"
		}
	},
	"plugins": [
		{
			"type": "node-workspace",
			"updateAllPackages": true
		},
		{
			"type": "linked-versions",
			"groupName": "npm-packages",
			"components": [
				"@s-hirano-ist/s-core",
				"@s-hirano-ist/s-ui",
				"@s-hirano-ist/s-database",
				"@s-hirano-ist/s-notification"
			]
		}
	],
	"changelog-sections": [
		{
			"type": "feat",
			"section": "Features"
		},
		{
			"type": "fix",
			"section": "Bug Fixes"
		},
		{
			"type": "revert",
			"section": "Bug Fixes"
		},
		{
			"type": "docs",
			"section": "Documentation"
		},
		{
			"type": "test",
			"section": "Documentation"
		},
		{
			"type": "chore",
			"section": "Maintenance"
		},
		{
			"type": "refactor",
			"section": "Maintenance"
		},
		{
			"type": "style",
			"section": "Maintenance"
		},
		{
			"type": "perf",
			"section": "Maintenance"
		},
		{
			"type": "build",
			"section": "Maintenance"
		},
		{
			"type": "ci",
			"section": "Maintenance"
		}
	]
}
