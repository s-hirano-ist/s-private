{
	"name": "s-private",
	"version": "9.5.2",
	"author": "s-hirano-ist",
	"description": "Private pages and admin tools for s-hirano-ist.",
	"packageManager": "pnpm@10.18.1",
	"type": "module",
	"scripts": {
		"dev": "pnpm --recursive dev",
		"build": "pnpm --recursive build",
		"clean": "rm -rf app/node_modules app/.next packages/*/node_modules packages/*/dist",
		"biome:ci": "biome ci .",
		"biome:fix": "biome check --write .",
		"lint": "pnpm --recursive lint",
		"lint:fix": "pnpm --recursive lint:fix",
		"test": "vitest run",
		"test:app": "vitest run --project app",
		"test:components": "vitest run --project components",
		"test:domains": "vitest run --project domains",
		"test:watch": "vitest",
		"test:all": "pnpm test && pnpm --filter s-private-app test:typecheck",
		"test:typecheck": "pnpm --filter s-private-app test:typecheck",
		"license:summary": "pnpm --recursive license:summary",
		"security": "pnpm audit",
		"jscpd": "jscpd -p app/src/**/*.{ts,tsx}",
		"knip": "knip",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build -o .storybook-static",
		"deps:check": "pnpm -r deps:check",
		"deps:circular": "pnpm -r deps:circular",
		"deps:graph": "pnpm -r deps:graph"
	},
	"dependencies": {
		"next": "15.5.3",
		"next-intl": "4.3.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@chromatic-com/storybook": "4.1.1",
		"@storybook/addon-a11y": "9.1.10",
		"@storybook/addon-docs": "9.1.10",
		"@storybook/addon-links": "9.1.10",
		"@storybook/addon-themes": "9.1.10",
		"@storybook/addon-vitest": "9.1.10",
		"@storybook/nextjs-vite": "9.1.10",
		"@tailwindcss/postcss": "4.1.13",
		"@vitest/coverage-v8": "3.2.4",
		"jscpd": "4.0.5",
		"knip": "5.64.2",
		"playwright": "1.56.0",
		"storybook": "9.1.10",
		"tailwindcss": "4.1.13",
		"typescript": "5.9.2",
		"vitest": "3.2.4"
	}
}
