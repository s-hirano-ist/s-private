{
	"name": "s-private",
	"version": "9.5.2",
	"author": "s-hirano-ist",
	"description": "Private pages and admin tools for s-hirano-ist.",
	"packageManager": "pnpm@10.18.2",
	"type": "module",
	"scripts": {
		"dev": "pnpm --recursive dev",
		"build": "pnpm --recursive build",
		"clean": "rm -rf app/node_modules app/.next packages/*/node_modules packages/*/dist",
		"biome:ci": "biome ci .",
		"biome:fix": "biome check --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:inspector": "config-inspector --config eslint.config.ts",
		"test": "vitest run",
		"test:app": "vitest run --project app",
		"test:components": "vitest run --project components",
		"test:domains": "vitest run --project domains",
		"test:watch": "vitest",
		"license:summary": "pnpm --recursive license:summary",
		"security": "pnpm audit",
		"jscpd": "jscpd",
		"knip": "knip",
		"storybook": "storybook dev -p 6006",
		"storybook:build": "storybook build -o .storybook-static",
		"deps:check": "depcruise app/src packages/components packages/domains --config .dependency-cruiser.cjs",
		"deps:circular": "depcruise app/src packages/components packages/domains --config .dependency-cruiser.cjs --output-type text --focus-depth 0",
		"deps:graph": "depcruise app/src packages/components packages/domains --config .dependency-cruiser.cjs --output-type dot | dot -T svg > dependency-graph.svg"
	},
	"dependencies": {
		"next": "15.5.3",
		"next-intl": "4.3.9"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@chromatic-com/storybook": "4.1.1",
		"@eslint/config-inspector": "1.3.0",
		"@eslint/eslintrc": "3.3.1",
		"@storybook/addon-a11y": "9.1.10",
		"@storybook/addon-docs": "9.1.10",
		"@storybook/addon-links": "9.1.10",
		"@storybook/addon-themes": "9.1.10",
		"@storybook/addon-vitest": "9.1.10",
		"@storybook/nextjs-vite": "9.1.10",
		"@tailwindcss/postcss": "4.1.13",
		"@testing-library/jest-dom": "6.9.1",
		"@testing-library/react": "16.3.0",
		"@testing-library/user-event": "14.6.1",
		"@vitest/browser": "3.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/eslint-plugin": "1.3.12",
		"dependency-cruiser": "17.0.1",
		"eslint": "9.37.0",
		"eslint-config-next": "15.5.3",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "5.2.0",
		"eslint-plugin-storybook": "9.1.7",
		"eslint-plugin-tailwindcss": "4.0.0-beta.0",
		"jscpd": "4.0.5",
		"jsdom": "27.0.0",
		"knip": "5.64.2",
		"playwright": "1.56.0",
		"storybook": "9.1.10",
		"tailwindcss": "4.1.13",
		"typescript": "5.9.2",
		"typescript-eslint": "8.46.0",
		"vitest": "3.2.4"
	}
}
